<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attacks_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="2">

            <TextView
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_gravity="start"
                android:layout_row="0"
                android:text="Name"
                android:textSize="@dimen/card_sub" />

            <TextView
                android:id="@+id/attack_name"
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_gravity="start"
                android:layout_row="1"
                android:text="Weapon"
                android:textAllCaps="false"
                android:textSize="@dimen/card_title"
                android:textStyle="bold" />

            <TextView
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="Bonus"
                android:textSize="@dimen/card_sub" />

            <TextView
                android:id="@+id/attack_bonus"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="+0"
                android:textSize="@dimen/card_title"
                android:textStyle="bold" />

            <TextView
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="Damage"
                android:textSize="@dimen/card_sub" />

            <TextView
                android:id="@+id/attack_damage"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="0d0"
                android:textSize="@dimen/card_title"
                android:textStyle="bold" />

            <TextView
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="Type"
                android:textSize="@dimen/card_sub" />

            <TextView
                android:id="@+id/attack_damage_type"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="slashing"
                android:textSize="@dimen/card_title"
                android:textStyle="bold" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="Range" />

            <TextView
                android:id="@+id/attack_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="0"
                android:textSize="@dimen/card_title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="Ability Score" />

            <TextView
                android:id="@+id/attack_ability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="STR"
                android:textSize="@dimen/card_title"
                android:textStyle="bold" />

        </GridLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>